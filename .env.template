# =============================================================================
# Environment Variables Template for Development
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.template .env
#
# IMPORTANT: Never commit .env to git - it's in .gitignore
# =============================================================================

# -----------------------------------------------------------------------------
# GitHub
# -----------------------------------------------------------------------------
# Personal access token (create at: https://github.com/settings/tokens)
# Scopes needed: repo, read:org, workflow, gist
GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# Anthropic (Claude)
# -----------------------------------------------------------------------------
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# OpenAI (GPT, ChatGPT)
# -----------------------------------------------------------------------------
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Optional: Organization ID
OPENAI_ORG_ID=

# -----------------------------------------------------------------------------
# Google (Gemini, Vertex AI)
# -----------------------------------------------------------------------------
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# For Vertex AI (path to service account JSON)
GOOGLE_APPLICATION_CREDENTIALS=

# GCP Project ID (for Vertex AI)
GOOGLE_CLOUD_PROJECT=

# -----------------------------------------------------------------------------
# Other AI Providers (Optional)
# -----------------------------------------------------------------------------
# Cohere - https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# Mistral - https://console.mistral.ai/api-keys
MISTRAL_API_KEY=

# Replicate - https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# Hugging Face - https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# Groq - https://console.groq.com/keys
GROQ_API_KEY=

# Together AI - https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# -----------------------------------------------------------------------------
# Local Development Settings
# -----------------------------------------------------------------------------
# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Local server port for file serving
LOCAL_SERVER_PORT=8080

# -----------------------------------------------------------------------------
# Project-Specific Settings
# -----------------------------------------------------------------------------
# Default paths (these are auto-detected, but can be overridden)
# Q_ROOT=
# HODIE_PATH=
# TODAY_PATH=
# ERIC_PATH=

# Crawler settings
CRAWLER_BATCH_SIZE=10
CRAWLER_MAX_CONCURRENT=3
